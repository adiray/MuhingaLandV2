<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/single_song_song_cover_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="centerCrop"
            android:src="@drawable/test_default_img1" />


        <TextView
            android:id="@+id/single_song_item_song_name"
            android:layout_width="70dp"
            android:layout_height="18dp"
            android:layout_marginBottom="9dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/montserrat_regular"
            android:foregroundGravity="center_horizontal"
            android:text="TextViewiiiiiiiiiiiiiii"
            android:textColor="@color/my_color_secondary"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/single_song_song_cover_image"
            app:layout_constraintTop_toTopOf="parent" />


        <ImageButton
            android:onClick="playTestClickEvent"
            android:id="@+id/single_song_item_play_button"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
            android:background="@color/my_color_bg"
            android:scaleType="centerCrop"
            android:src="@drawable/baseline_play_arrow_black_18dp"
            app:layout_constraintStart_toEndOf="@+id/single_song_item_song_name"
            app:layout_constraintTop_toTopOf="parent" />


        <ImageButton
            android:onClick="pauseTestClickEvent"
            android:id="@+id/single_song_item_pause_button"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="10dp"
            android:background="@color/my_color_bg"
            android:scaleType="centerCrop"
            android:src="@drawable/baseline_pause_black_18dp"
            app:layout_constraintStart_toEndOf="@+id/single_song_item_play_button"
            app:layout_constraintTop_toTopOf="parent" />


        <ImageButton

            android:id="@+id/single_song_item_stop_button"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="10dp"
            android:background="@color/my_color_bg"
            android:scaleType="centerCrop"
            android:src="@drawable/baseline_stop_black_18dp"
            app:layout_constraintStart_toEndOf="@+id/single_song_item_pause_button"
            app:layout_constraintTop_toTopOf="parent" />


        <ImageButton

            android:id="@+id/single_song_item_download_button"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="10dp"
            android:background="@color/my_color_bg"
            android:scaleType="centerCrop"
            android:src="@drawable/baseline_get_app_black_18dp"
            app:layout_constraintStart_toEndOf="@+id/single_song_item_stop_button"
            app:layout_constraintTop_toTopOf="parent" />


    </android.support.constraint.ConstraintLayout>


</android.support.v7.widget.CardView>